<?xml version="1.0"?>
<launch>

	# Input arguments
 	<arg name="viz_DS_path"   default="true"/>

   # Load SEDS motion generator for picking task
	<group ns="ds1">
	    <param name="input_topic_name"                  value="/lwr/ee_pose"/>
	    <param name="output_topic_name"                 value="/ds1/desired_velocity"/>
	    <param name="output_filtered_topic_name"        value="/ds1/desired_velocity_filtered"/>
	    <param name="publish_DS_path"                   value="false"/>
	    <rosparam command="load" file="$(find ds_motion_generator)/config/learned_DS/seDS/Curve_go_right.yml"/>
	    <node name="ds_node" pkg="ds_motion_generator"  type="seDS_motionGenerator_node" output="screen"/>
	</group>

	<group if="$(arg viz_DS_path)">
	  <group ns="ds1_path">
	      <param name="input_topic_name"                  value="/lwr/ee_pose"/>
	      <param name="output_topic_name"                 value=""/>
	      <param name="output_filtered_topic_name"        value=""/>    
	      <param name="publish_DS_path"                   value="true"/>
	      <rosparam command="load" file="$(find ds_motion_generator)/config/learned_DS/seDS/$(arg DS_name).yml"/>
	      <node name="ds_node" pkg="ds_motion_generator"  type="seDS_motionGenerator_node" output="screen"/>
	  </group>
	</group>


	# Load LPV-DS motion generator for inspection task
	<group ns="ds2">
	    <param name="input_topic_name"                  value="/lwr/ee_pose"/>
	    <param name="output_topic_name"                 value="/ds2/desired_velocity"/>
	    <param name="output_filtered_topic_name"        value="/ds2/desired_velocity_filtered"/>
	    <param name="publish_DS_path"                   value="false"/>
	    <rosparam command="load" file="$(find ds_motion_generator)/config/learned_DS/lpvDS/$(arg DS_name).yml"/>
	    <node name="lpvDS_node" pkg="ds_motion_generator"  type="lpvDS_motionGenerator_node" output="screen"/>
	</group>

	<group if="$(arg viz_DS_path)">
	  <group ns="ds2_path">
	      <param name="input_topic_name"                  value="/lwr/ee_pose"/>
	      <param name="output_topic_name"                 value=""/>
	      <param name="output_filtered_topic_name"        value=""/>    
	      <param name="publish_DS_path"                   value="true"/>
	      <rosparam command="load" file="$(find ds_motion_generator)/config/learned_DS/lpvDS/sink-pqlf.yml"/>
	      <node name="lpvDS_node" pkg="ds_motion_generator"  type="lpvDS_motionGenerator_node" output="screen"/>
	  </group>
	</group>


	# This node published the desired orientation at the target
	<node pkg="rostopic" type="rostopic" name="angle_setting" args="pub /lwr/joint_controllers/passive_ds_command_orient geometry_msgs/Quaternion '{x:  0.0469, y: 0.9987, z: 0.0181, w:  -0.0015}' -r 100" />

</launch>
